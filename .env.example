# Environment: local, development, production
ENVIRONMENT_NAME=local

# Django Core
DJANGO_SECRET_KEY=django-insecure-change-me-for-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,[::1]

# JWT / Authentication Settings
ACCESS_TOKEN_LIFETIME_MINUTES=60
REFRESH_TOKEN_LIFETIME_DAYS=7

# HashID (Required)
HASHID_FIELD_SALT=change_this_to_a_random_string

WORKERS_EVENT_BUS_NAME=local-workers

# AWS 
AWS_STORAGE_BUCKET_NAME=test-bucket
AWS_EXPORTS_STORAGE_BUCKET_NAME=exports-bucket
AWS_XRAY_SDK_ENABLED=False

OTP_AUTH_ISSUER_NAME=example.com

# Social Auth
SOCIAL_AUTH_REDIRECT_IS_HTTPS=False
SOCIAL_AUTH_ALLOWED_REDIRECT_HOSTS=http://localhost:8000
SOCIAL_AUTH_GOOGLE_OAUTH2_KEY=
SOCIAL_AUTH_GOOGLE_OAUTH2_SECRET=
SOCIAL_AUTH_FACEBOOK_KEY=
SOCIAL_AUTH_FACEBOOK_SECRET=

# Email Configuration
# Default logic in settings uses django_ses.SESBackend if not set.
# For local development, 'django.core.mail.backends.console.EmailBackend' is recommended.
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_FROM_ADDRESS=webmaster@localhost
EMAIL_REPLY_ADDRESS=webmaster@localhost

EMAIL_ASSETS_URL=http://localhost:3000/email-assets
WEB_APP_URL=http://localhost:3000